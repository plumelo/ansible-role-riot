[Unit]
Description=synapseservice

[Service]
Type=simple
User={{ riot_user }}
WorkingDirectory={{ synapse_virtualenv }}
Environement=VIRTUAL_ENV={{ synapse_virtualenv }}
Environement=PATH=$VIRTUAL_ENV/bin:$PATH
ExecStart={{ synapse_virtualenv }}/bin/synctl start

[Install]
WantedBy=multi-user.target
